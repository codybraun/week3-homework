<div class="row-fluid">
<h2><%=@place.title%></h2>
<div class="col-md-4">
<img style="float:left;" class="placeImg" src="<%=@place.photoURL%>">
</div>

<div class="col-md-7">
<%=@place.description%>
<br><br>
<div class="row col-md-6">
<form class="form-horizontal" action="/places/review/<%=@id%>">
<label>Review title:</label><br>

<input class="form-control" type="text" name="title">
<br><br>
<label>Review:</label><br>
<input class="form-control" type="text" name="description">
<br><br>
<label>Rating:</label><br>
<select class="form-control" type="text" name="rating">
  <option>1</option>
  <option>2</option>
  <option>3</option>
  <option>4</option>
  <option>5</option>
  </select>
<br><br>
<button class="form-control">Submit</button>
</form>
</div>

<div class="row col-md-6" style = "padding:10px; margin:10px; border:solid black; border-radius:5px; background-color:#CCFFFF">
<h2>Reviews</h2>

 <% @reviews.each do |review| %>
 	<h3><%=review.title%></h3> 
 	<p style="color:red;">
 	<% (1..review.rating.to_f).each do %>
 	&#9733;
 	<% end %>
 	</p>
 	<%=review.description%>
  <% end %>

</div>

</div>
</div>
<br><br>




